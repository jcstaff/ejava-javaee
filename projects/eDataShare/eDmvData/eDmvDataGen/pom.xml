<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 
        http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
        <groupId>ejava.javaee.projects.eDataShare</groupId>
        <artifactId>eDmvData</artifactId>
        <version>3.0.2013.2-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>eDmvDataGen</artifactId>

    <name>eDMV DataGen</name>
    <description>
        This project builds the test data sets for the system. It
        connects to an externally defined database, maps the database
        directly to DTO classes, and outputs a set of XML files to
        be used by the project's parser during the student ingest. 
        
        This project cannot be run without a remote connection to the
        test database. Thus it is not expected to be used by the class.
    </description>

    <dependencies>
        <dependency>
          <groupId>javax.persistence</groupId>
          <artifactId>persistence-api</artifactId>
          <version>1.0</version>
          <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>eDmvDTO</artifactId>
            <version>3.0.2013.2</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>commons-logging</groupId>
            <artifactId>commons-logging</artifactId>
            <scope>compile</scope>
        </dependency>

        <!-- StAX API (javax.xml.stream); -->
        <dependency>
            <groupId>javax.xml.bind</groupId>
            <artifactId>jsr173_api</artifactId>
            <version>1.0</version>
            <scope>compile</scope>
        </dependency>

        <!-- JAXB API (javax.xml.bind); -->
        <dependency>
            <groupId>javax.xml.bind</groupId>
            <artifactId>jaxb-api</artifactId>
            <scope>compile</scope>
        </dependency>

        <!-- JAXB Reference Impl (com.sun.xml.bind.v2.ContextFactory) -->
        <dependency>
            <groupId>com.sun.xml.bind</groupId>
            <artifactId>jaxb-impl</artifactId>
            <version>2.0.2</version>
            <scope>test</scope>
        </dependency>
        <!-- StAX Reference Impl (javax.xml.stream.XMLInputFactory) -->
        <dependency>
            <groupId>com.sun.xml.stream</groupId>
            <artifactId>sjsxp</artifactId>
            <version>1.0</version>
            <scope>test</scope>
            <exclusions>
                <exclusion>
                    <groupId>javax.xml.stream</groupId>
                    <artifactId>stax-api</artifactId>
                </exclusion>
            </exclusions>
        </dependency>

        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>log4j</groupId>
            <artifactId>log4j</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>


    <build>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>

    </build>

    <profiles>
        <profile> <!-- defines our default database -->
            <id>oracle</id>
            <activation>
                <property> 
                    <name>!jdbc</name>
                </property>
            </activation>
            <properties>
                  <jdbc.driver>oracle.jdbc.driver.OracleDriver</jdbc.driver>
                  <jdbc.url>jdbc:oracle:thin:@localhost:1521:XE</jdbc.url>
                  <jdbc.user/>
                  <jdbc.password />
                  <hibernate.dialect>org.hibernate.dialect.OracleDialect</hibernate.dialect>
            </properties>
            <dependencies>
                <dependency>
                    <groupId>oracle</groupId>
                    <artifactId>ojdbc</artifactId>
                    <version>1.4</version>
                    <scope>test</scope>
                </dependency>       
            </dependencies>
        </profile>

        <profile> <!-- defines our default persistence provider -->
            <id>hibernate</id>
            <activation>
                <property> <!-- use this property to name alt persistence provider -->
                    <name>!jpa</name>
                </property>
            </activation>
            <repositories>
                <repository>
                    <id>jboss-nexus</id>
                    <name>JBoss Nexus Repository</name>
                    <url>https://repository.jboss.org/nexus/content/groups/public-jboss/</url>
                </repository>
            </repositories>
            <dependencies>
                <dependency>
                    <groupId>org.hibernate</groupId>
                    <artifactId>hibernate-entitymanager</artifactId>
                    <scope>test</scope>
                </dependency>
                <dependency>
                    <groupId>org.slf4j</groupId>
                    <artifactId>slf4j-log4j12</artifactId>
                    <scope>test</scope>
                </dependency>
                <!--
                <dependency>
                    <groupId>hsqldb</groupId>
                    <artifactId>hsqldb</artifactId>
                    <version>1.8.0.4</version>
                    <scope>test</scope>
                </dependency>       
                <dependency>
                    <groupId>oracle</groupId>
                    <artifactId>ojdbc</artifactId>
                    <version>1.4</version>
                    <scope>test</scope>
                </dependency>       
                -->
            </dependencies>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <configuration>
                            <argLine>${surefire.argLine}</argLine>
                            <systemProperties>                                
                                <property>
                                    <name>outputDir</name>
                                    <value>
                                        ../eDmvTestUtil/src/main/resources/xml
                                    </value>
                                </property>
                                <property>
                                    <name>emf.hibernate.connection.url</name>
                                    <value>${jdbc.url}</value>
                                </property>
                                <property>
                                    <name>emf.hibernate.connection.driver_class</name>
                                    <value>${jdbc.driver}</value>
                                </property>
                                <property>
                                    <name>emf.hibernate.connection.password</name>
                                    <value>${jdbc.password}</value>
                                </property>
                                <property>
                                    <name>emf.hibernate.connection.username</name>
                                    <value>${jdbc.user}</value>
                                </property>
                            </systemProperties>
                        </configuration>
                    </plugin>

                    <!-- generates a DDL file for persistence unit -->
                    <plugin>
                        <artifactId>hibernate3-maven-plugin</artifactId>
                        <groupId>org.codehaus.mojo</groupId>
                        <extensions>true</extensions>
                        <executions>
                            <execution>
                                <id>generate-drop-ddl</id>
                                <phase>compile</phase>
                                <goals>
                                    <goal>hbm2ddl</goal>
                                </goals>
                                <configuration>
                                    <componentProperties>
                                        <outputfilename>
                                            ${project.artifactId}-drop.ddl
                                        </outputfilename>
                                        <drop>true</drop>
                                        <create>false</create>
                                    </componentProperties>
                                </configuration>
                            </execution>
                            <execution>
                                <id>generate-create-ddl</id>
                                <phase>compile</phase>
                                <goals>
                                    <goal>hbm2ddl</goal>
                                </goals>
                                <configuration>
                                    <componentProperties>
                                        <outputfilename>
                                            ${project.artifactId}-create.ddl
                                        </outputfilename>
                                        <drop>false</drop>
                                        <create>true</create>
                                    </componentProperties>
                                </configuration>
                            </execution>
                        </executions>
                        <configuration>
                            <components>
                                <component>
                                    <name>hbm2ddl</name>
                                    <implementation>
                                        jpaconfiguration
                                    </implementation>
                                    <outputDirectory>
                                        target/classes/ddl
                                    </outputDirectory>
                                </component>
                            </components>
                            <componentProperties>
                                <persistenceunit>
                                    eDmvData
                                </persistenceunit>
                                <export>false</export>
                                <format>true</format>
                            </componentProperties>
                        </configuration>
                    </plugin>

                </plugins>
            </build>
        </profile>
    </profiles>
</project>
