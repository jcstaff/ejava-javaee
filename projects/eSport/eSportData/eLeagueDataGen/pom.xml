<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 
        http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
        <groupId>ejava.javaee.projects.eSport</groupId>
        <artifactId>eSportData</artifactId>
        <version>3.0.2013.2-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>eLeagueDataGen</artifactId>
    <version>2.0.2012.1rc1</version>

    <name>eLeague DataGen</name>
    <description>
        This project builds the test data sets for the eLeague system. It
        connects to an externally defined database, maps the database
        directly to eLeague DTO classes, and outputs a set of XML files to
        be used by the project's parser during the student ingest. This
        project cannot be run without a remote connection to the test
        database. Thus it is not expected to be used by the class.
    </description>

    <dependencies>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>eLeagueDTO</artifactId>
	        <version>3.0.2013.2</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>commons-logging</groupId>
            <artifactId>commons-logging</artifactId>
            <scope>compile</scope>
        </dependency>

        <!-- StAX API (javax.xml.stream); -->
        <dependency>
            <groupId>javax.xml.bind</groupId>
            <artifactId>jsr173_api</artifactId>
            <version>1.0</version>
            <scope>compile</scope>
        </dependency>

        <!-- JAXB API (javax.xml.bind); -->
        <dependency>
            <groupId>javax.xml.bind</groupId>
            <artifactId>jaxb-api</artifactId>
            <scope>compile</scope>
        </dependency>

        <!-- JAXB Reference Impl (com.sun.xml.bind.v2.ContextFactory) -->
        <dependency>
            <groupId>com.sun.xml.bind</groupId>
            <artifactId>jaxb-impl</artifactId>
            <version>2.0.2</version>
            <scope>test</scope>
        </dependency>
        <!-- StAX Reference Impl (javax.xml.stream.XMLInputFactory) -->
        <dependency>
            <groupId>com.sun.xml.stream</groupId>
            <artifactId>sjsxp</artifactId>
            <version>1.0</version>
            <scope>test</scope>
            <exclusions>
                <exclusion>
                    <groupId>javax.xml.stream</groupId>
                    <artifactId>stax-api</artifactId>
                </exclusion>
            </exclusions>
        </dependency>

        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>log4j</groupId>
            <artifactId>log4j</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>


    <build>
        <!-- filter resource files for profile-specific values -->
        <testResources>
            <testResource>
                <directory>src/test/resources</directory>
                <filtering>true</filtering>
                <excludes>
                    <exclude>**/*-ant.xml</exclude>
                </excludes>
            </testResource>
            <testResource>
                <directory>src/test/resources</directory>
                <filtering>false</filtering>
                <includes>
                    <include>**/*-ant.xml</include>
                </includes>
            </testResource>
        </testResources>
    </build>

    <profiles>
        <profile> <!-- defines our default persistence provider -->
            <id>hibernate</id>
            <activation>
                <property> <!-- use this property to name alt persistence provider -->
                    <name>!jpa</name>
                </property>
            </activation>
            <dependencies>
                <dependency>
                    <groupId>org.hibernate</groupId>
                    <artifactId>hibernate</artifactId>
                    <version>3.2.1.ga</version>
                    <scope>test</scope>
                </dependency>
                <dependency>
                    <groupId>org.hibernate</groupId>
                    <artifactId>hibernate-annotations</artifactId>
                    <version>3.2.1.ga</version>
                    <scope>test</scope>
                </dependency>
                <dependency>
                    <groupId>org.hibernate</groupId>
                    <artifactId>hibernate-entitymanager</artifactId>
                    <scope>test</scope>
                </dependency>
                <!-- 
                <dependency>
                    <groupId>hsqldb</groupId>
                    <artifactId>hsqldb</artifactId>
                    <scope>test</scope>
                </dependency>       
                 -->
                <dependency>
                    <groupId>oracle</groupId>
                    <artifactId>ojdbc</artifactId>
                    <version>1.4</version>
                    <scope>test</scope>
                </dependency>       
            </dependencies>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <configuration>
                            <argLine>${surefire.argLine}</argLine>
                            <systemProperties>                                
                                <property>
                                    <name>outputDir</name>
                                    <value>
                                        ../eLeagueTestUtil/src/main/resources/xml
                                    </value>
                                </property>
                                <property>
                                    <name>emf.hibernate.connection.url</name>
                                    <value>${jdbc.url}</value>
                                </property>
                                <property>
                                    <name>emf.hibernate.connection.driver_class</name>
                                    <value>${jdbc.driver}</value>
                                </property>
                                <property>
                                    <name>emf.hibernate.connection.password</name>
                                    <value>${jdbc.password}</value>
                                </property>
                                <property>
                                    <name>emf.hibernate.connection.username</name>
                                    <value>${jdbc.user}</value>
                                </property>
                            </systemProperties>
                        </configuration>
                    </plugin>

                    <!-- generates a DDL file for persistence unit -->
                    <plugin>
                        <artifactId>hibernate3-maven-plugin</artifactId>
                        <groupId>org.codehaus.mojo</groupId>
                        <extensions>true</extensions>
                        <executions>
                            <execution>
                                <id>generate-drop-ddl</id>
                                <phase>generate-sources</phase>
                                <goals>
                                    <goal>hbm2ddl</goal>
                                </goals>
                                <configuration>
                                    <componentProperties>
                                        <outputfilename>
                                            ${project.artifactId}-drop.ddl
                                        </outputfilename>
                                        <drop>true</drop>
                                        <create>false</create>
                                    </componentProperties>
                                </configuration>
                            </execution>
                            <execution>
                                <id>generate-create-ddl</id>
                                <phase>generate-sources</phase>
                                <goals>
                                    <goal>hbm2ddl</goal>
                                </goals>
                                <configuration>
                                    <componentProperties>
                                        <outputfilename>
                                            ${project.artifactId}-create.ddl
                                        </outputfilename>
                                        <drop>false</drop>
                                        <create>true</create>
                                    </componentProperties>
                                </configuration>
                            </execution>
                        </executions>
                        <configuration>
                            <components>
                                <component>
                                    <name>hbm2ddl</name>
                                    <implementation>
                                        jpaconfiguration
                                    </implementation>
                                    <outputDirectory>
                                        target/classes/ddl
                                    </outputDirectory>
                                </component>
                            </components>
                            <componentProperties>
                                <persistenceunit>
                                    eLeagueData
                                </persistenceunit>
                                <export>false</export>
                                <format>true</format>
                            </componentProperties>
                        </configuration>
                    </plugin>

                </plugins>
            </build>
        </profile>
    </profiles>
</project>
